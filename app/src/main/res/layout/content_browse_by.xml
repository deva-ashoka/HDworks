<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.hdworks.hdworks.BrowseBy"
    tools:showIn="@layout/app_bar_browse_by">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <include layout="@layout/hdmc_logo_header"></include>


        <TextView
            android:id="@+id/browse"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textColor="@color/black"
            android:text="Browse By:"
            android:textAlignment="center"
            android:textSize="15dp" />

        <Button
            android:id="@+id/myWard"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_border"
            android:text="My Ward" />

        <Button
            android:id="@+id/ward"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/button_border"
            android:text="Ward" />

        <Button
            android:id="@+id/workType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/button_border"
            android:text="Work Type" />

        <Button
            android:id="@+id/sourceOfIncome"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/button_border"
            android:text="Source of Income" />

        <Button
            android:id="@+id/year"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@drawable/button_border"
            android:text="Year" />

    </LinearLayout>
</LinearLayout>
